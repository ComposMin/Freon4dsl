{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es2016.array.include"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "outDir": "dist",
    "paths": {
      "projectit": ["projectit/src"],
      "projectit/*": ["projectit/src/*"],
      "projectit-model": ["projectit-model/src"],
      "projectit-model/*": ["projectit-model/src/*"],
      "projectit-demo": ["projectit-demo/src"],
      "projectit-demo/*": ["projectit-demo/src/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5",
    "types": ["node", "jest", "jest-enzyme"]
  },
  "exclude": ["node_modules"]
}
