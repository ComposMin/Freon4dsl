{
  "extends": "../../tsconfig-base.json",

  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "baseUrl": "./",
    "module": "ES2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
