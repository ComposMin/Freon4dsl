language Education

modelunit Test {
    name: identifier;
    scenarios: Scenario[];
    reference topic: Topic;
    reference subject: Subject;
}

concept Scenario {
    description: string;
    steps: Step[]; /* Note that the order is of importance */
}

abstract concept AbstractStep {}

concept Step base AbstractStep {
    reference fromPage: Page;
    answerGiven: Answer;
    reference toPage: Page;
}

concept ExitStep base AbstractStep {
    // nothing to do, scenarion ends
}

abstract concept Answer {
}

concept BooleanAnswer base Answer {
//    value: boolean;
    bool: BooleanLiteralExpression;
}

concept StringAnswer base Answer {
    value: string;
}

concept FractionAnswer base Answer {
    fraction: FractionLiteralExpression;
}

concept WholeNumberAnswer base Answer {
    value: number;
}

concept MultipleChoice base Answer {
    answers: string[];
}

concept NoAnswer base Answer {
}
