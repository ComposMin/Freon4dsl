DemoFunctionCallExpression {
    @projection DemoFunctionCallExpression
        [
        CALL [[this.functionDefinition]] (  )
        ]
    @trigger "function"
}

DemoModel {
    @projection DemoModel
        [
        model [[this.name]] {
        entities:
            [[this.entities
                @vertical
                @terminator [\n\n]
            ]]
        model wide functions:
            [[this.functions @horizontal @separator [\n] ]]
        }
        ]
}
