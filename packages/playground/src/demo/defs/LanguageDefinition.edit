editor StartEditor for language Demo

DemoAttribute {
    @projection attribuut [ [[self.name]] : [[self.declaredType]] ]
}

DemoStringLiteralExpression {
    @projection DemoStringLiteralExpression
        [
		'[[self.value]]'
        ]
    @trigger "'"
}


DemoIfExpression {
    @projection DemoIfExpression
        [
        if ([[ self.condition ]]) then
                  [[ self.whenTrue ]]
        else
           [[self.whenFalse]]
        endif
        ]

    @trigger "if"
    @symbol "if"
}
