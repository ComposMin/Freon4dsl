editor StartEditor for language Demo

DemoAttribute {
    @projection attribuut [[[this.name]] : [[this.declaredType]]]
}

DemoStringLiteralExpression {
    @projection DemoStringLiteralExpression
        [
		'[[this.value]]'
        ]
    @trigger "'"
}

DemoIfExpression {
    @projection DemoIfExpression
        [
        if( [[ this.condition ]] ) then
            [[ this.whenTrue ]]
        else
            [[this.whenFalse]]
        endif
        ]

    @trigger "if"
    @symbol "if"
}

DemoPlusExpression {
    @symbol "+"
}

DemoMultiplyExpression {
    @symbol "*"
}

DemoDivideExpression {
    @symbol "/"
}
DemoLessThenExpression {
    @symbol "<"
}
DemoOrExpression {
    @symbol "or"
}

DemoEntity {
    @trigger "entity"
}

