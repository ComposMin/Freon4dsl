{
  "name": "@projectit/playground",
  "version": "0.1.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "yarn example && tsc",
    "build-app": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "install-local": "yarn install --registry http://localhost:4873",
    "clean": "rm src/example/*/*/*.js && rm src/example/*/*/*.js.map",
    "example": 	    "bash ../../scripts/projectit-dev.sh all -d src/example/defs -o src/example",
    "calculator":   "bash ../../scripts/projectit-dev.sh all -d src/calculator/defs -o src/calculator",
    "expressions":  "bash ../../scripts/projectit-dev.sh all -d src/mps-expressions/defs -o src/mps-expressions",
    "heating":      "bash ../../scripts/projectit-dev.sh all -d src/heating/defs -o src/heating",
    "json": 	    "bash ../../scripts/projectit-dev.sh all -d src/json/defs -o src/json",
    "octopus": 	    "bash ../../scripts/projectit-dev.sh all -d src/octopus/defs -o src/octopus",
    "openhab":      "bash ../../scripts/projectit-dev.sh -v all -d src/openhab/defs -o src/openhab",
    "pi-languages": "bash ../../scripts/projectit-dev.sh -v all -d src/pi-languages/defs -o src/pi-languages",
    "octopus": 	    "bash ../../scripts/projectit-dev.sh all -d src/octopus/defs -o src/octopus",
    "openhab":      "bash ../../scripts/projectit-dev.sh -v all -d src/openhab/defs -o src/openhab",
    "pi-languages": "bash ../../scripts/projectit-dev.sh -v all -d src/pi-languages/defs -o src/pi-languages",
    "taxrules": 	"bash ../../scripts/projectit-dev.sh all -d src/taxrules/defs -o src/taxrules",
    "all-examples": "yarn run calculator && yarn run octopus && yarn run example && yarn run heating && yarn run json && yarn run expressions && yarn run openhab && yarn run pi-languages && yarn run taxrules && yarn run expressions"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "4.1.6"
  },
  "dependencies": {
    "@projectit/core": "0.1.1",
    "@projectit/core-svelte": "0.1.1",
    "@projectit/server": "0.1.1",
    "@types/node": "^14.14.31",
    "lodash": "^4.17.21",
    "pegjs": "0.10.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.38.3",
    "svelte-mui": "^0.3.3-7"
  }
}
